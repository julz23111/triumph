{
  "name": "library-vision",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "server",
    "web"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev --workspace server\" \"npm:dev --workspace web\"",
    "build": "npm run build --workspace server && npm run build --workspace web",
    "migrate": "npm run migrate --workspace server",
    "seed": "npm run seed --workspace server",
    "lint": "npm run lint --workspace server && npm run lint --workspace web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
